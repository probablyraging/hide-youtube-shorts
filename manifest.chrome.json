{
    "name": "Hide YouTube Shorts",
    "description": "Hide YouTube Shorts videos effortlessly with this powerful browser extension",
    "version": "1.7.1",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Hide YouTube Shorts"
    },
    "icons": {
        "16": "public/icons/icon16.png",
        "32": "public/icons/icon48.png",
        "48": "public/icons/icon48.png",
        "128": "public/icons/icon128.png"
    }
}